#version 460 core

#extension GL_GOOGLE_include_directive : enable
#extension GL_EXT_buffer_reference2    : enable
#extension GL_EXT_scalar_block_layout  : enable
#extension GL_EXT_ray_tracing          : enable

#include "Constants/ShadowRT.glsl"
#include "MegaSet.glsl"

void main()
{
    ivec2 pixelCoords = ivec2(gl_LaunchIDEXT.xy);
    ivec2 outputSize  = imageSize(Images[Constants.OutputImage]);

    float random = 0.5f * ((float(pixelCoords.x) / float(outputSize.x)) + (float(pixelCoords.y) / float(outputSize.y)));

    imageStore(Images[Constants.OutputImage], pixelCoords, vec4(random, 0.0f, 0.0f, 0.0f));
}